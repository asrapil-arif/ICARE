		w2ui['gridContract'].toolbar.disable('vw_button');
		w2ui['gridContract'].toolbar.disable('approve_button');
		w2ui['gridContract'].toolbar.disable('verified_button');
		w2ui['gridContract'].toolbar.disable('force_ver_vaonline');
