@{
	ViewBag.Child_Caption = "Home Page";
	ViewBag.Icon = "<i class=\"ace-icon fa fa-home\"></i>";
	ViewBag.Title = "HomePage";

	var ROLES = new I_Care.Classes.UserRoleProvider();
	ViewBag.Title = "HomePage";
	string UserType = ROLES.GetUserType(User.Identity.Name.ToString());


	if (Request.Cookies["unauthorize_error"] != null
		&& !string.IsNullOrEmpty(Request.Cookies["unauthorize_error"].Value))
	{
		Response.Cookies.Clear();
		<text>
		<script>
			w2alert("@Request.Cookies["unauthorize_error"].Value");
		</script>

		</text>

		Response.Cookies["unauthorize_error"].Expires = DateTime.Now.AddDays(-5);


	}
}

