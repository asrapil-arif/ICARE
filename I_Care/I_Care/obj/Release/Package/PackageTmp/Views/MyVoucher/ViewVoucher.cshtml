@{
	ViewBag.Title = "E-Voucher";
	Layout = null;

}

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Pertamina Retail | E-Voucher</title>
	<link rel="icon" href="../../Content/img/logo_ptm.png" type="image/x-icon">
	<link rel="stylesheet" href="../../Content/assets/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
	<script src="../../Content/assets/js/jquery-2.1.4.min.js"></script>
	<script src="../../Content/assets/js/bootstrap.min.js"></script>
	<script src="../../Content/assets/js/JsBarcode.all.min.js"></script>
	<script src="../../Content/assets/js/qrcode.min.js" integrity="sha512-CNgIRecGo7nphbeZ04Sc13ka07paqdeTu0WR1IM4kNcpmBAUSHSQX0FslNhTDadL4O5SAGapGt4FodqL8My0mA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>


	<style type="text/css">
		body {
			background-image: url("../../Content/img/spbu_coco.jpg") !important;
			background-size: 100% !important;
			background-repeat: no-repeat !important;
			background: white;
			background-attachment: fixed;
			height: 100%;
		}

		#doc_info {
			border: none;
			box-shadow: 4px 11px 35px -1px rgba(0,0,0,0.5);
			-webkit-box-shadow: 4px 11px 35px -1px rgba(0,0,0,0.5);
			-moz-box-shadow: 4px 11px 35px -1px rgba(0,0,0,0.5);
			height: 100%;
			background-color: white;
			opacity:.95;
			
		}

			#doc_info td {
				font-size: 13px;
				font-family: Arial;
			}

		#tbl-info-sub {
			border-bottom: 1px solid #dedede;
			margin-bottom: 5px !important;
		}

			#tbl-info-sub td {
				padding: 5px;
			}


		#QR-code img {
			border: 4px solid #666666 !important;
			padding: 10px;
		}

		#barcode {
			border: 4px solid #666666;
			padding: 10px;
		}

