							$("#page_proses_load").hide();
							$("#template_1").show();
							w2alert("Error, try again or contact our administrator please !", "Save E-Kontrak");

						}
					});

					$(".template_1_temp").remove();

					if (Simpan.responseJSON["Result"].toLocaleLowerCase().indexOf("error") != -1) {

